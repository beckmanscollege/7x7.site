<html>
  <head>
    <title>7x7</title>
    <link id="favicon" rel="icon" href="https://cdn.glitch.global/9c242df3-cd11-4aa5-ab53-9653fd6e4ad4/favicon.ico5?v=1707813003363" type="image/x-icon"
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="/style_new.css" />
    <script src="/script.js"></script>
  </head>
  <body>
    <main style="justify-content: flex-start">
   <!--   <h1>
        {{word.name}}
      </h1> !-->
      <div class="archive-wrapper"
      >
        {{#each grids}}
          <div class="archive-grid-container">
            <div class="grid">
              {{#each this.gridData}}
                <svg
                  width="95"
                  height="95"
                  viewbox="0 0 95 95"
                  class="gridItem color-{{this.color}}"
                  xmlns="http://www.w3.org/2000/svg"
                  style="grid-row-start: {{this.row}}; grid-column-start: {{this.column}}"
                >
                {{#eq this.shape "square"}}
                  <rect width="95" height="95" class="square"></rect>
                {{else}}
                  {{#eq this.shape "triangle"}}
                    <path d="M47.5 0L95 95L0 95L47.5 0Z" class="triangle"></path>
                  {{else}}
                    {{#eq this.shape "circle"}}
                      <circle cx="47.5" cy="47.5" r="47.5" class="circle"></circle>
                    {{/eq}}
                  {{/eq}}
                {{/eq}}
                </svg>
              {{/each}}
            </div>
          <form style="display: flex; gap: 10px;" action="/remove-drawing" method="POST">
          <input name="gameId" value="{{this.gameId}}" type="hidden">
            <button class="button" type="submit" onclick="return confirm('Are you sure you want to remove this drawing?');">
              Remove drawing
            </button>
          </form>
          </div>
        {{/each}}
      </div>
            <div class="button-container">
        <a href="/archive" class="icon-button color-lightgray">
          <img
            src="https://cdn.glitch.global/9c242df3-cd11-4aa5-ab53-9653fd6e4ad4/Back.svg?v=1707424957267"
          />
        </a>
        <div class="menu-button" style="width: 150px;">
       <!--   <img
            style="position:absolute; left: 0; margin-left: 8px;"
            src="https://cdn.glitch.global/9c242df3-cd11-4aa5-ab53-9653fd6e4ad4/Image.svg?v=1707430560255"
          /> !-->
           {{word.name}}
        </div>
      </div>
    </main>
  </body>
</html>